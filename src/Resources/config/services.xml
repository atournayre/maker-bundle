<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

        <services>
            <defaults public="false" />

            <service id="atournayre.maker.trait_generator" class="Atournayre\Bundle\MakerBundle\Command\MakeTrait\TraitGenerator">
                <argument type="service" id="maker.generator" />
                <argument type="service" id="maker.file_manager" />
            </service>

            <service id="atournayre.maker.trait_for_collection_generator"
                     class="Atournayre\Bundle\MakerBundle\Command\MakeTrait\TraitForCollectionGenerator"
                     parent="atournayre.maker.trait_generator" />

            <service id="atournayre.maker.class_trait_adder" class="Atournayre\Bundle\MakerBundle\Command\MakeTrait\ClassTraitAdder">
                <argument type="service" id="maker.generator" />
                <argument type="service" id="maker.file_manager" />
            </service>

        </services>
</container>
